<%# app/views/reviews/new.html.erb %>

<div class="container">
  <%= link_to sanitize("&larr; Back to books"), books_path %>

  <div class="header">
    <h1>New review</h1>
  </div>

  <div class="review">
    <div class="review__image">
       <% if @book.image_link %>
        <%= image_tag @book.image_link, class: "books__cover_image" %>
      <% else %>
        <%= image_tag "no_cover.gif", class: "books__cover_image" %>
      <% end %>
    </div>
    <div class="container__review__content">
      <div class="review_titles">
        <h1>
          <%= @book.title %>
        </h1>
        <h4>
          <%= @book.author %>
        </h4>
      </div>
      <%= render partial: "form", locals: { review: @review } %>
    </div>
  </div>
</div>