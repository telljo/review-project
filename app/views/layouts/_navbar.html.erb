
<header class="navbar">
  <%= link_to root_path do %>
    <%= image_tag('logo.svg', size: '130x50') %>
  <% end %>
  <% if user_signed_in? %>
    <%= render "layouts/navbar_dropdown" %>
  <% else %>
  <div class="navbar__links">
    <%= link_to "Sign In",
                  new_user_session_path,
                  class: "btn btn--primary navbar__right" %>
    <%= link_to "Sign Up",
              new_user_registration_path,
              class: "btn btn--primary navbar__right" %>
  </div>
  <% end %>
</header>